<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/quran_screen_bg">

    <ImageView
        android:id="@+id/quran_screen_logo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="34dp"
        android:src="@drawable/islami_quran_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.15"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/quran_recycler_view"
        android:layout_width="match_parent"
        android:paddingHorizontal="15dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@id/quran_screen_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_quran_chapter"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/quran_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Suras List"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginStart="35dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>