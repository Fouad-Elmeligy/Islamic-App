<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sebha_bg"
    >
    <ImageView
        android:id="@+id/head_sebha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/head_sebha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.355"
        />
    <ImageView
        android:id="@+id/sebha_body"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/sebha_body"
        app:layout_constraintHeight_percent="0.75"
        app:layout_constraintWidth_percent="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/islami_quran_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/tasbih"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/sebha_body"
        app:layout_constraintEnd_toEndOf="@id/sebha_body"
        app:layout_constraintTop_toTopOf="@id/sebha_body"
        app:layout_constraintBottom_toBottomOf="@id/sebha_body"
        app:layout_constraintVertical_bias="0.5"
        android:text="سبحان الله"
        />
    <TextView
        android:id="@+id/tasbih_counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/sebha_body"
        app:layout_constraintEnd_toEndOf="@id/sebha_body"
        app:layout_constraintTop_toTopOf="@id/sebha_body"
        app:layout_constraintBottom_toBottomOf="@id/sebha_body"
        app:layout_constraintVertical_bias="0.65"
        android:text="30"
        />

</androidx.constraintlayout.widget.ConstraintLayout>